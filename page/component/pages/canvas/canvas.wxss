/* pages/canvas/canvas.wxss */

canvas {
  position: fixed;
  top: 0;
  left: 0;
}

.preview { 
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2;
}

.preview image {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -3;
}

.name {
  display: block;
  margin: 5px auto;
  text-align: center;
  color: #fff;
  size: 28rpx;
}

/**弹框**/

.modal-dialog {
  width: 86%;
  height: 360rpx;
  overflow: hidden;
  position: absolute;
  top: calc(50% + 100rpx);
  left: 7%;
  background-color: #fff;
  border-radius: 15rpx;
}

.modal-title {
  padding-top: 36rpx;
}

.modal-footer {
  padding-top: 15rpx;
}

.btn-forward {
  margin-left: 5%;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
}

.btn-save {
  margin-left: 5%;
  width: 90%;
  color: #000;
}

.btn-back {
  margin-left: 5%;
  width: 90%;
  height: 80rpx;
  color: #000;
  text-align: center;
  font-size: 0.8rem;
}

.cover-forward {
  margin-left: 5%;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  text-align: center;
  border-radius: 15rpx;
  color: #fff;
  background-color: #1aad19;
  border: 1px solid #1aad19;
}

.cover-save {
  margin-left: 5%;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  text-align: center;
  border-radius: 15rpx;
  position: relative;
  color: #000;
  background-color: #f8f8f8;
  border: 1px solid #eee;
}

.cover-back {
  margin-left: 5%;
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 35rpx;
  text-align: center;
  border-radius: 15rpx;
  color: #000;
}
