<view class="page page-form">

    <view class="weui-cells contact-form">
        <view class="weui-cell weui-cell_access">
            <view class="weui-cell__hd">
                <text class="weui-label">姓名</text>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="onNameInput" placeholder-class="mag-plhd" />
            </view>
            <view class="weui-cell__ft"></view>
        </view>
        <view class="weui-cell weui-cell_access" bindtap="showSexActionSheet">
            <view class="weui-cell__hd">
                <text class="weui-label">性别</text>
            </view>
            <view class="weui-cell__bd sex-text">
                {{sex}}
            </view>
            <view class="weui-cell__ft"></view>
        </view>
        <view class="weui-cell weui-cell_access">
            <view class="weui-cell__hd">
                <text class="weui-label">手机号码</text>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" bindinput="onPhoneInput" placeholder-class="mag-plhd" />
            </view>
            <view class="weui-cell__ft"></view>
        </view>
    </view>
    
    <view class="mag-submitbtn-wrap">
        <button bindtap="saveNow" class="mag-submit-btn" type="primary" disabled="{{submitDisabled}}">保存</button>
    </view>

</view>